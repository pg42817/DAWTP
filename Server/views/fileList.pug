extends layout_files

block content
    #display.w3-card-4.modal
    .w3-container.w3-teal
        h2 File List
    table.w3-table.w3-bordered
        tr
            th Date
            th File
            th Description
            th Size
            th Type
        each file in files
            tr(onclick='showImage(' + '"' + file.name + '"' + ',' + '"' + file.mimetype + '"' + ')')
            
                td #{file.date}
                td #{file.name}
                td #{file.desc}
                td #{file.size}
                td #{file.mimetype}
    .w3-container.w3-teal
        address Generated by upload-single::DAW2020 em #{d} --------------