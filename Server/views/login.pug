extends layout

block content
  <div class="w3-bar w3-blue w3-xlarge">
  <a href="/" class="w3-bar-item w3-button" style="float: right";>Página Principal</a>
  </div>

  br
  br

  <div class="w3-container w3-half w3-margin-top w3-display-topmiddle" style="top:100px">
   
  .w3-container.w3-blue
    h2.w3-center Formulário de Login
    
  <form class="w3-container w3-card-4"  action="/users/login" method="POST">
  if message.length>0
      <div class="w3-panel w3-red">
        p #{message}
      </div> 
  <p>
  <input class="w3-input" type="text" name="id" style="width:90%" required>
  <label class="w3-label w3-validate">Email</label></p>

  <p>
  <input class="w3-input" type="password", name="password" style="width:90%" required>
  <label class="w3-label w3-validate">Password</label></p>

  <p>
  <button class="w3-btn w3-section w3-blue w3-ripple w3-auto" style="display: flex; justify-content: center": center> Login </button></p>

  </form>
  <p>Não se encontra registado? Registe-se <a href='/users/registar'>aqui</a>
  </div>