extends layout

block content
    <div>
        <div class="w3-bar w3-blue w3-large">
        <a href="/users/news" class="w3-bar-item w3-button ">Notícias</a> 
        <a href="/mural" class="w3-bar-item w3-button ">Mural</a> 
        <a href="/users/logout" class="w3-bar-item w3-button" style="float: right";>Logout</a>
        <a href="/users/perfil" class="w3-bar-item w3-button" style="float: right";>Perfil</a>
        <a href="javascript:history.back()" class="w3-bar-item w3-button" style="float: right">Página Anterior</a>
    </div>


    <div class="w3-container w3-margin-top w3-display-topmiddle" style="top:100px">
        .w3-container.w3-blue
            h2.w3-center Criar publicação
        <form class="w3-container w3-card-4" action='/users/pubs' method='POST' enctype='multipart/form-data' style="width:1000px">
            #1st_File.w3-row.w3-margin-bottom
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Tema
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='theme' required)
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Descricao da publicação
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='description' required)
                <br>
                <div class="w3-row w3-margin-bottom">
                    <div class="w3-col s3">
                        <label class="w3-text-blue"><b>Visibilidade</b></label>
                    </div>
                    <div class="w3-col s9 w3-border">
                        <select class="w3-select"  name="visibility" id="visibility" style="display: inline-block;width:100%" required>
                            <option value="Privado"> Privado
                            <option value="Público"> Público
                        </select>
                    </div>
                </div>
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b SIP
                    .w3-col.s9
                        input.w3-check(type="checkbox" name="SIP_check" checked="checked")
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Titulo
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='title' required)
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Ficheiro
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='file' name='myFile' required)
            #extra_files
            br
            button.w3-bar-item.w3-button.w3-blue-grey(type='button' onclick='extraFiles()') Adicionar ficheiro
            input.w3-bar-item.w3-button.w3-blue-grey(type='submit' value='Criar publicação' required)
        </form>
    </div>